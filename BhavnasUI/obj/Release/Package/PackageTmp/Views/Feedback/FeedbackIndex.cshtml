<style>
    @@media screen and (min-width: 380px) and (max-width: 450px) {
        .spnName {
            font-size: 13px;
        }

        .spnId {
            font-size: 10px;
        }
    }

    @@media screen and (min-width: 450px) and (max-width: 1600px) {
        .spnName {
            font-size: 18px;
        }

        .spnId {
            font-size: 13px;
        }
    }

    @@media screen and (min-width: 380px) and (max-width: 500px) {
        .rating {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }


    .FixedCard {
        position: relative;
        overflow: hidden;
    }

        .FixedCard .FixedCardHeader {
            position: sticky;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1;
        }

        .FixedCard .FixedCardBody {
            overflow-y: auto;
        }



    .rating:not(:checked) > input {
        position: absolute;
        top: -9999px;
    }

    .rating:not(:checked) > label {
        float: right;
        width: 1em;
        overflow: hidden;
        white-space: nowrap;
        cursor: pointer;
        font-size: 30px;
        color: #ccc;
    }

        .rating:not(:checked) > label:before {
            content: '★ ';
        }

    .rating > input:checked ~ label {
        color: #f00;
    }
</style>
