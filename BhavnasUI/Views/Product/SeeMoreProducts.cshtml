<style>
    @@media (max-width: 767px) {
        .col-sm-3 {
            width: 50%;
        }

        .ProductImage {
            width: 100px;
            height: 100px;
            border: 10px solid deeppink;
            border-radius: 50%;
        }

        .ProductName {
            color: deeppink;
            font-weight: bold;
            font-size: 15px;
        }

        .ProductPrice {
