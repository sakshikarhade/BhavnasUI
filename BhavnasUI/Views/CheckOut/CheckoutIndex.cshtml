
@{
    ViewBag.Title = "CheckoutIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/Checkout.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Content/pages/Checkout.js"></script>

<h2>CheckoutIndex</h2>


<div class="custom">
    <div class="row">

        <div class="col-75">
            <div class="container-fluid">
                <form>
                    <div class="row">
                        <div class="col-50">
                            <h3>Billing Address</h3>
                            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                            <input type="text" id="fname" name="firstname" placeholder="Your Name">
                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input type="text" id="email" name="email" placeholder="john@example.com">
                            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                            <textarea type="text" id="adr" name="address" placeholder="542 W. 15th Street"></textarea>

                            <label for="payment"><i class="fa fa-money"></i> Payment Mode</label>
                            <input type="radio" id="cash" name="fav_language" value="CashOnDelivery"> Cash on Delivery  <br /> <br />
                            @*<div class="row">
                                    <div class="col-50">
                                        <label for="state">State</label>
                                        <input type="text" id="state" name="state" placeholder="NY">
                                    </div>
                                    <div class="col-50">
                                        <label for="zip">Zip</label>
                                        <input type="text" id="zip" name="zip" placeholder="10001">
                                    </div>
                                </div>*@
                        </div>

                        <div class="col-50">
                            <h3>Payment</h3>
                            @*<label for="fname">Accepted Cards</label>
                                <div class="icon-container">
                                    <i class="fa fa-cc-visa" style="color:navy;"></i>
                                    <i class="fa fa-cc-amex" style="color:blue;"></i>
                                    <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                    <i class="fa fa-cc-discover" style="color:orange;"></i>
                                </div>*@
                            <label for="cname"> <i class="fa fa-phone"></i> Mobile No</label>
                            <input type="text" id="cname" name="cardname" placeholder="e.g 9999999999">
                            <label for="city"><i class="fa fa-institution"></i> City</label>
                            <select id="ddlcity" name="city">
                                <option value="0">--Select City--</option>
                                <option value="1">Alkot</option>
                                <option value="2">test</option>
                            </select>
                            <label for="expyear">Delivery Date </label>
                            <input type="date" id="txtdate" name="expyear">
                            @*<div class="row">
                                    <div class="col-100">

                                    </div>

                                </div>*@
                        </div>
                        <div class="row">


                            <label for="adr"><i class="fa-solid fa-square-pen" style="margin-left:10px"></i>  Message</label>
                            <textarea type="text" style="margin-left:15px" class="form-control" maxlength="max" id="adr" name="message" placeholder="Dear John,     "></textarea>
                        </div>


                    </div>
                    @*<label>
                            <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                        </label>*@
                    <input type="submit" value="Continue to checkout" onclick="Save()" class="btncheckout">
                </form>
            </div>
        </div>
        <div class="col-25">
            <div class="container">
                <h4>Order Sumary <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> <b>@ViewBag.Cart</b></span></h4>
                @*<p><a href="#">Product 1</a> <span class="price">$15</span></p>
        <p><a href="#">Product 2</a> <span class="price">$5</span></p>
        <p><a href="#">Product 3</a> <span class="price">$8</span></p>*@
                <hr>
                <div id="CartDetails">

                </div>
                <p>Subtotal <span class="price" style="color:black"><b>@ViewBag.Sum</b></span></p>

                <p>
                    Shipping
                    <span class="price" style="color:black"><b>@ViewBag.Shipping</b></span>
                </p>

                <p>Total(Incl. taxes) <span class="price" style="color:black"><b>@ViewBag.Total</b></span></p>

            </div>
        </div>
    </div>
</div>


